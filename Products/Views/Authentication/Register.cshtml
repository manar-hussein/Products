@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<div class="row justify-content-center align-content-center">

    <div class="col-md-9 bg-body rounded-3 shadow-lg p-3 m-2">
        <form asp-action="Register" class="bg-body-tertiary p-4 m-5 rounded-5" enctype="multipart/form-data" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger  fw-bold"></div>
            <div class="mb-3 px-3">
                <label for="UserName" class="form-label fw-bold">User Name</label>
                <input asp-for="UserName" class="form-control" placeholder="@Html.DisplayNameFor(m => m.UserName)">
                <span asp-validation-for="UserName" class="form-text text-danger"></span>
            </div>
            <div class="mb-3 px-3">
                <label for="Email" class="form-label fw-bold">Email</label>
                <input asp-for="Email" class="form-control" placeholder="@Html.DisplayNameFor(m => m.Email)">
                <span asp-validation-for="Email" class="form-text text-danger"></span>
            </div>
            <div class="mb-3 px-3">
                <label for="Password" class="form-label fw-bold">Password</label>
                <input asp-for="Password" class="form-control" placeholder="@Html.DisplayNameFor(m => m.Password)">
                <span asp-validation-for="Password" class="form-text text-danger"></span>
            </div>
            <div class="mb-3 px-3">
                <label for="PhoneNumber" class="form-label fw-bold">Phone Number</label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="@Html.DisplayNameFor(m => m.PhoneNumber)">
                <span asp-validation-for="PhoneNumber" class="form-text text-danger"></span>
            </div>
            <div class="mb-3 px-3">
                <label for="SSN" class="form-label fw-bold">SSN</label>
                <input asp-for="SSN" class="form-control" placeholder="@Html.DisplayNameFor(m => m.SSN)">
                <span asp-validation-for="SSN" class="form-text text-danger"></span>
            </div>
            <button type="submit" class="btn btn-dark w-100 m-2 fw-bolder fs-6">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

