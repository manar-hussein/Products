@model List<ProductsViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_SallerLayout.cshtml";
    var index = 1;
}

<div class="container-fluid mx-0 px-5 bg-dark py-1 vh-100">
    <div class="row my-3">
        <a asp-action="Add" asp-controller="Product" class="btn btn-light fs-6 fw-bolder">Add New Product</a>
    </div>
    <table class="table table-dark table-hover  my-5">
        <thead class="text-center">
            <tr class="text-center">
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Brand</th>
                <th scope="col">Price</th>
                <th scope="col">Information</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var pro in Model)
            {
                <tr class=" text-center">
                    <th scope="row">@index</th>
                    <td>@pro.Name</td>
                    <td>@pro.Brand</td>
                    <td>@pro.Price</td>
                    <td><a class="btn btn-warning" asp-action="Update" asp-route-id="@pro.Id" asp-controller="Product"><i class="fa-solid fa-eye"></i>See More</a></td>
                    <td><a class="btn btn-danger" asp-action="Delete" asp-route-id="@pro.Id" asp-controller="Product"><i class="fa-solid fa-trash"></i>Delete</a></td>
                </tr>
                index++;
            }
        </tbody>
    </table>
</div>
