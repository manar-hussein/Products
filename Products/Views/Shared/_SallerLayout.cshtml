<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Products</title>
    <script type="importmap"></script>
    <link href="~/datatable/css/datatable-bootstrap.min.css" rel="stylesheet" />
    <link href="~/datatable/css/datatable.min.css" rel="stylesheet" />
    <link href="~/lib/fontawesome-iconpicker/css/fontawesome-iconpicker.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Products.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-dark navbar-dark fw-bold border-top border-3">
            <div class="container d-flex justify-content-center">
                <a class="navbar-brand fs-3 fw-bolder">
                   Welcome  @_httpContextAccessor.HttpContext?.User?.FindFirstValue(ClaimTypes.Name);
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse mx-auto" id="navbarNav">
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item">
                            <a class="nav-link active fs-5 mx-5 px-5" aria-current="page" href="/Saller/Index">Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fs-5 mx-5 px-5" href="/Product/Index">See Shop</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fs-5 mx-5 px-5" href="/Authentication/LogOut">SignOut</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/datatable/js/datatable.jquery.min.js"></script>
    <script src="~/datatable/js/datatable.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
